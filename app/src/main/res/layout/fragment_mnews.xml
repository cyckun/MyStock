<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/my_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_row_bg"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <com.chandler.red.mystock.widget.CircleImageView
            android:id="@+id/my_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp" />
        <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/my_photo"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="游客"
        android:textColor="@color/main_text_color"/>

        <TextView
            android:id="@+id/my_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/my_photo"
            android:layout_below="@id/my_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="账号：------"
            android:textSize="16sp"
            android:textColor="@color/main_text_color"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_bg_grey"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg_black_light"/>
    <LinearLayout
        android:id="@+id/my_operate_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg_grey"/>

</LinearLayout>
</ScrollView>